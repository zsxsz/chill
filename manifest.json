{
    "name": "Veo 3 Prompt Generator Pro",
    "short_name": "Veo3Pro",
    "description": "Professional AI-powered prompt generator for Veo 3 with advanced analysis, enhancement tools, and extensive presets",
    "version": "3.0.0",
    "manifest_version": 3,
    "author": "VeoPro Team",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png",
        "192": "icons/icon192.png",
        "512": "icons/icon512.png"
    },
    "start_url": "/",
    "display": "standalone",
    "background_color": "#667eea",
    "theme_color": "#667eea",
    "orientation": "any",
    "categories": [
        "productivity",
        "utilities",
        "photo",
        "video",
        "artificial-intelligence"
    ],
    "permissions": [
        "storage",
        "clipboardWrite",
        "unlimitedStorage"
    ],
    "app": {
        "background": {
            "persistent": false,
            "scripts": ["background.js"]
        }
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "minimum_chrome_version": "92",
    "offline_enabled": true,
    "update_url": "https://clients2.google.com/service/update2/crx",
    "web_accessible_resources": [{
        "resources": [
            "presets/*",
            "icons/*",
            "styles/*",
            "templates/*",
            "models/*"
        ],
        "matches": ["<all_urls>"]
    }],
    "lang": "id",
    "dir": "ltr",
    "prefer_related_applications": false,
    "shortcuts": [
        {
            "name": "New Enhanced Prompt",
            "url": "/?action=new",
            "description": "Create a new enhanced video prompt with AI assistance"
        },
        {
            "name": "Load Preset",
            "url": "/?action=preset",
            "description": "Load a professional preset prompt template"
        },
        {
            "name": "Quick Analysis",
            "url": "/?action=analyze",
            "description": "Analyze and enhance existing prompt"
        }
    ],
    "screenshots": [
        {
            "src": "screenshots/home.png",
            "sizes": "1280x720",
            "type": "image/png",
            "platform": "wide",
            "label": "Enhanced Homescreen of Veo 3 Prompt Generator Pro"
        },
        {
            "src": "screenshots/analysis.png",
            "sizes": "1280x720",
            "type": "image/png",
            "platform": "wide",
            "label": "Prompt Quality Analysis Dashboard"
        }
    ],
    "features": [
        "Advanced Prompt Analysis",
        "AI-Powered Suggestions",
        "Professional Templates",
        "Real-time Quality Metrics",
        "Style Enhancement Tools",
        "Multi-language Support"
    ]
} 